<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dieschnittstelle.mobile.android.skeleton">

<!--    <uses-permission android:name="android.permission.INTERNET" />-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="de.thieme.ToDoApplication"
        android:allowBackup="true"
        android:label="To Do-Liste"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <activity android:name="de.thieme.view.OverviewActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="de.thieme.view.LoginActivity" android:exported="true"/>
        <activity android:name="de.thieme.view.DetailViewActivity" android:exported="true"/>

    </application>

</manifest>